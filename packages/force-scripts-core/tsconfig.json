{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "outDir": "dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["node"]
  }
}
